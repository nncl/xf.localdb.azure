<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.LocalDB.View.Login.LoginView"
             Title="Autenticação">

    <ContentPage.Content>
        <StackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Acesso via Twitter" Font="20" HorizontalOptions="Center" />
<!--            <Entry x:Name="txtUsuario" Placeholder="Usuario" WidthRequest="250" />-->
<!--            <Entry x:Name="pwdSenha" Placeholder="Senha" IsPassword="True" WidthRequest="250" />-->
            <StackLayout Padding="10" Orientation="Horizontal"
                         HorizontalOptions="Center" VerticalOptions="Center">
                <Button x:Name="btnLogin" Text="Entrar" Clicked="Autenticar_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>